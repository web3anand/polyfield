{
  "name": "polyfield",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "npx concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "check": "tsc --noEmit && cd client && tsc --noEmit && cd ../server && tsc --noEmit",
    "scanner": "cd scanner && npm install && node edge-scanner.js",
    "scanner:backtest": "cd scanner && node backtest.js",
    "oracle": "cd oracle && npm install && node oracle-bot.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "axios": "^1.12.2",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsrepo": "^2.5.0",
    "memorystore": "^1.6.7",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "20.16.11",
    "@vercel/node": "^5.5.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "shadcn": "^3.5.1",
    "tsx": "^4.20.5",
    "typescript": "5.6.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
