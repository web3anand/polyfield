{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "public",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/oracle/stats",
      "destination": "/api/oracle?endpoint=stats"
    },
    {
      "source": "/api/oracle/markets",
      "destination": "/api/oracle?endpoint=markets"
    },
    {
      "source": "/api/leaderboard/pnl",
      "destination": "/api/leaderboard/wallet-data?endpoint=pnl"
    },
    {
      "source": "/api/leaderboard/wallet",
      "destination": "/api/leaderboard/wallet-data?endpoint=wallet"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/leaderboard/sync",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 300
    }
  }
}
